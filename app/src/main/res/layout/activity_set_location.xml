<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cskaoyan.zhao.a04mobilemanager.activity.SetLocationActivity">

    <TextView
        android:text="设置归属提提示框的位置"
        style="@style/mytitlestyle"
        android:id="@+id/tv_setlocationactivity_title"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_setlocationactivity_toast"
        android:background="@drawable/call_locate_blue">
        <TextView
            android:id="@+id/tv_toast_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:shadowColor="#BB000000"
            android:shadowRadius="2.75"
            android:text="深圳移动"
            />
    </LinearLayout>
</RelativeLayout>
